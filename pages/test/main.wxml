<!--2.菜谱中心-->
<view hidden="{{currentTab!==1}}">
  <!--2.（1）搜索框-->
  <view class='page_row' bindtap="suo">
    <view class="search">
      <view class="df search_arr">
        <icon class="searchcion" size='35' type='search'></icon>
        <input class="" disabled placeholder="请输入食物关键字" value="{{searchValue}}" />
      </view>
    </view>
    <view class='sousuo'>搜索</view>
  </view>
  <!--2.（2）侧栏分类-->
  <!--主盒子-->
  <view class="container">
    <!-- 左侧栏 -->
    <view class='nav_left'>
      <view class="nav_left_items {{curNav == 1 ? 'active' : ''}}" bindtap="switchRightTab" data-id="1">
        水果类
      </view>

      <view class="nav_left_items {{curNav == 2 ? 'active' : ''}}" bindtap="switchRightTab" data-id="2">
        饮品
      </view>

