          <text>芒果</text>
        </view>

      </view>
      <view wx:if="{{curNav==3}}">
        <view class="nav_right_items">
          <image src=""></image>
          <text>花椰菜</text>
        </view>

        <view class="nav_right_items">
          <image src=""></image>
          <text>生菜</text>
        </view>

        <view class="nav_right_items">
          <image src=""></image>
          <text>番茄</text>
        </view>
      </view>
    </view>
  </view>
</view>