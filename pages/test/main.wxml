        </view>

        <view class="nav_right_items">
          <image src=""></image>
          <text>火龙果</text>
        </view>

        <view class="nav_right_items">
          <image src=""></image>
          <text>草莓</text>
        </view>
      </view>

      <view wx:if="{{curNav==2}}">
        <view class="nav_right_items">
          <image src=""></image>
