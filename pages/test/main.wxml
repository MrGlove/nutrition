<!--导航条-->
<view class="navbar">
  <text wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">{{item}}</text>
</view>

<!--1.营养中心-->
<view hidden="{{currentTab!==0}}">

  <!--三个模块摄入量统计-->
  <view class="content0">
    <view class="content01" style="flex:1;height:75px;background-color:lightyellow">
      <view class='content01_text1'>
        <text>已摄入：</text>
      </view>
      <view class='content01_text2'>
        <text>{{text[0]}}</text>
      </view>
      <view class='content01_text3'>
        <text>Kcal</text>
      </view>
    </view>
    <view class="content02" style="flex:1;height:75px;background-color:lightgreen">
      <view class='content01_text1'>
        <text>推荐摄入：</text>
      </view>
      <view class='content01_text2'>
        <text>{{text[1]}}</text>
      </view>
      <view class='content01_text3'>
        <text>Kcal</text>
      </view>
    </view>
    <view class="content03" style="flex:1;height:75px;background-color:lightyellow">
      <view class='content01_text1'>
        <text>还需摄入：</text>
      </view>
      <view class='content01_text2'>
        <text>{{text[2]}}</text>
      </view>
      <view class='content01_text3'>
        <text>Kcal</text>
      </view>
    </view>
  </view>

  <!--分割条-->
  <view>
    <view style="flex:1;height:15px;background-color:lightgray"></view>
  </view>

  <!--四大营养素表格-->
  <view class="content2">
    <view class="content21" style="flex:1;height:27px;">
      <view class='content22_text1'>
        <text>蛋白质：</text>
      </view>
      <view class='content22_text2'>
        <text>{{text2[0]}}</text>
      </view>
      <view class='content22_text3'>
        <text>Kcal</text>
      </view>

      <view class='content22_text4'>
        <text>%</text>
      </view>
      <view class='content22_text5'>
        <text>{{text1[0]}}</text>
      </view>
    </view>

    <view class="content22" style="flex:1;height:27px;">
      <view class='content22_text1'>
        <text>脂肪：</text>
      </view>
      <view class='content22_text2'>
        <text>{{text2[1]}}</text>
      </view>
      <view class='content22_text3'>
        <text>Kcal</text>
      </view>
      <view class='content22_text4'>
        <text>%</text>
      </view>
      <view class='content22_text5'>
        <text>{{text1[1]}}</text>
      </view>
    </view>

    <view class="content23" style="flex:1;height:27px;">
      <view class='content22_text1'>
        <text>碳水化合物：</text>
      </view>
      <view class='content22_text2'>
        <text>{{text2[2]}}</text>
      </view>
      <view class='content22_text3'>
        <text>Kcal</text>
      </view>
      <view class='content22_text4'>
        <text>%</text>
      </view>
      <view class='content22_text5'>
        <text>{{text1[2]}}</text>
      </view>

    </view>

    <view class="content24" style="flex:1;height:27px;">
      <view class='content22_text1'>
        <text>膳食纤维：</text>
      </view>
      <view class='content22_text2'>
        <text>{{text2[3]}}</text>
      </view>
      <view class='content22_text3'>
        <text>Kcal</text>
      </view>
      <view class='content22_text4'>
        <text>%</text>
      </view>
      <view class='content22_text5'>
        <text>{{text1[3]}}</text>
      </view>
    </view>

  </view>

  <!--分割条-->
  <view>
    <view style="flex:1;height:15px;background-color:lightgray"></view>
  </view>

  <!--两个表格-->
  <view class="content1">
    <text>四大营养素供能比</text>
    <canvas canvas-id="pieCanvas1" class="canvas"></canvas>

    <!--分割条-->
    <view>
      <view style="flex:1;height:15px;background-color:lightgray"></view>
    </view>

    <text>三餐热量比</text>
    <canvas canvas-id="pieCanvas2" class="canvas"></canvas>
    <!--<canvas canvas-id="columnCanvas" class="canvas"></canvas>-->
  </view>

  <!--分割条-->
  <view>
    <view style="flex:1;height:15px;background-color:lightgray"></view>
  </view>

</view>
